<%- include('header') -%>


<section id="content" class="container">
    <div class="jumbotron">
        <h1 class="display-4">Caselli</h1>
    </div>
    <%- include('menu') -%>
    <% if(Array.isArray(records) && records.length > 0) { %>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Autostrada</th>
                <th scope="col">Km</th>
                <th scope="col">Nome</th>
                <th scope="col">Codice</th>
            </tr>
        </thead>
        <tbody>
            <% records.forEach(record => { %>
            <tr>
                <td><%= record.autostrada %></td>
                <td><%= record.progressiva_km %></td>
                <td><%= record.nome %></td>
                <td><%= record.codice %></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
<% } %>    
</section>


<%- include('footer') -%>